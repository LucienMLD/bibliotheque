<div class="wrapper wrapper-form">
  <div class="container">
    <div class="row">
      <div class="col-sm-6 col-sm-offset-3">
        <%= simple_form_for @book do |f| %>
          <form>
            <div class="form-group">
              <%= f.input :title, placeholder: "Titre", class: "form-control" %>
            </div>
            <div class="form-group">
            <%= f.input :author, placeholder: "Auteur", class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.input :resume, placeholder: "Résumé", class: "form-control", as: :text, :input_html => {:rows => 10} %>
            </div>
            <%= f.button :submit, class: "btn btn-default" %>
          </form>
        <% end %>
      </div>
    </div>
  </div>
</div>
