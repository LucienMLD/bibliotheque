<div class="wrapper">
  <div class="container">
    <div class="row">
      <div class="col-sm-12">
        <%= simple_form_for @booking do |f| %>
          <form>
            <div class="form-group">
              <%= f.input :user_id, collection: @users, :label_method => :email, prompt: "Selectionnez un utilisateur"%>
            </div>
            <div class="form-group">
            <%= f.input :book_id, collection: @books, :label_method => :title, prompt: "Selectionnez un livre"%>
            </div>
            <%= f.button :submit, class: "btn btn-default" %>
          </form>
        <% end %>
      </div>
    </div>
  </div>
</div>
